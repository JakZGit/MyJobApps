var mongoose = require('mongoose');
var myData =  {}; //stores all the schemas, then is exported for others to use
var Schema = mongoose.Schema, ObjectId = Schema.ObjectId; // generates a  unique id

myData.user_schema = new Schema({
	id : ObjectId,
	email: {type:String, lowercase:true, unique:true},
	password: String,
	firstname: String,
	lastname: String,
	jobs: [{type:ObjectId, ref:'jobList'}],
});

myData.jobList_schema = new Schema({
	id: ObjectId,
	company: String,
	position: String,
	descriptionLink: String,
	registerDate: {type: Date, default: Date.now()},

});

myData.user = mongoose.model('user',myData.user_schema); //turns schema into fillable mongoose models
myData.jobList = mongoose.model('jobList',myData.jobList_schema); 
module.exports = myData;